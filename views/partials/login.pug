extends ../layout.pug

block content
	div.container
		<div class="row">
			<div class="col-sm-6">
				<h3 class="text-center">Login</h3>
				<div class="card">
					<div class="card-body">
						<form action="/auth/login" method="post">
							<div class="form-row">
								<div class="form-group col-md-6">
									<label for="inputEmail4">Email</label>
									<input type="email" class="form-control form-control-sm" id="email" placeholder="Email" name="email">
								</div>
								<div class="form-group col-md-6">
									<label for="inputPassword4">Password</label>
									<input type="password" class="form-control form-control-sm" id="password" placeholder="Password" name="password">
								</div>
							</div>
							<button type="submit" class="btn btn-primary">Sign in</button>
						</form>
					</div>
				</div>
			</div>
			<div class="col-sm-6">
				<h3 class="text-center">Sign-Up</h3>
				<div class="card">
					<div class="card-body">
						<form action="/auth/signup" method="post">
							<div class="form-row">
								<div class="form-group col-md-6">
									<label for="inputPassword4">First Name</label>
									<input type="text" class="form-control form-control-sm" id="firstName" name="firstName" placeholder="First Name" required>
								</div>
								<div class="form-group col-md-6">
									<label for="inputPassword4">Last Name</label>
									<input type="text" class="form-control form-control-sm" id="lastName" name="lastName" placeholder="Last Name">
								</div>
							</div>
							<div class="form-group">
								<label for="s_u_email">Email</label>
								<input type="email" class="form-control form-control-sm" id="s_u_email" name="email" placeholder="Email">
							</div>
							<div class="form-row">
								<div class="form-group col-md-6">
									<label for="inputPassword4">Password</label>
									<input type="password" class="form-control form-control-sm" id="inputPassword4" name="password" placeholder="Password">
								</div>
								<div class="form-group col-md-6">
									<label for="inputPassword4">Retype Password</label>
									<input type="password" class="form-control form-control-sm" id="inputPassword4" name="confirm_password" placeholder="Retype Password">
								</div>
							</div>
							<div class="form-group">
								<label for="inputAddress">Address</label>
								<input type="text" class="form-control form-control-sm" id="address" name="address" placeholder="1234 Main St">
							</div>
							<div class="form-row">
								<div class="form-group col-md-6">
									<label for="inputCity">City</label>
									<input type="text" class="form-control form-control-sm" name="city" id="city">
								</div>
								<div class="form-group col-md-4">
									<label for="state">State</label>
									<select id="state" name='state' class="form-control">
									each val in states
										option= val
									</select>
								</div>
								<div class="form-group col-md-2">
									<label for="inputZip">Zip</label>
									<input type="text" class="form-control" name='zipCode' id="zipCode">
								</div>
							</div>
							<button type="submit" class="btn btn-primary">Sign in</button>
						</form>
					</div>
				</div>
			</div>
		</div>