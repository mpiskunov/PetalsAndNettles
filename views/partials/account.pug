extends ../layout.pug

block content 
	<div class="container">
		<h3 class="text-center">Sign-Up</h3>
		<div class="card">
			<div class="card-body">
				<form action="/auth/update" method="post">
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="inputPassword4">First Name</label>
							<input type="text" class="form-control form-control-sm" id="firstName" name="firstName" value="#{req.user.firstName}" required>
						</div>
						<div class="form-group col-md-6">
							<label for="inputPassword4">Last Name</label>
							<input type="text" class="form-control form-control-sm" id="lastName" name="lastName" value="#{req.user.lastName}" required>
						</div>
					</div>
					<div class="form-group">
						<label for="s_u_email">Email</label>
						<input type="email" class="form-control form-control-sm" id="s_u_email" name="email" value="#{req.user.email}" required>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="inputPassword4">Password</label>
							<input type="password" class="form-control form-control-sm" id="inputPassword4" name="password" value="#{req.user.password}" required>
						</div>
						<div class="form-group col-md-6">
							<label for="inputPassword4">Retype Password</label>
							<input type="password" class="form-control form-control-sm" id="inputPassword4" name="confirm_password" required>
						</div>
					</div>
					<div class="form-group">
						<label for="inputAddress">Address</label>
						<input type="text" class="form-control form-control-sm" id="address" name="address" value="#{req.user.address}" required>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="inputCity">City</label>
							<input type="text" class="form-control form-control-sm" name="city" id="city" value="#{req.user.city}" required>
						</div>
						<div class="form-group col-md-4">
							<label for="state">State</label>
							<select id="state" name='state' class="form-control" >
								<option selected>#{req.user.state}</option>
							each val in states
								option= val
							</select>
						</div>
						<div class="form-group col-md-2">
							<label for="inputZip">Zip</label>
							<input type="text" class="form-control" name='zipCode' id="zipCode" value="#{req.user.zipCode}" required>
						</div>
					</div>
					<button type="submit" class="btn btn-primary">Update</button>
				</form>
			</div>
		</div>
	</div>